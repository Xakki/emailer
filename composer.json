{
  "name": "xakki/emailer",
  "description": "Email notification service",
  "llicense": "proprietary",
  "authors": [
    {
      "name": "Xakki",
      "email": "xakki@ya.ru"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "preferred-install": "dist",
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "php": "8.2",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-fileinfo": "*",
    "ext-redis": "*",
    "psr/log": "^3.0",
    "phpmailer/phpmailer": "^6.6",
    "doctrine/dbal": "^3.3",
    "doctrine/migrations": "^3.4",
    "phroute/phroute": "^2.2",
    "monolog/monolog": "^3.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.7",
    "squizlabs/php_codesniffer": "^3.7",
    "opsway/psr12-strict-coding-standard": "^0.7"
  },
  "scripts": {
    "phpunit": "phpunit -c phpunit.xml",
    "phpstan": "phpstan analyse --memory-limit 1G",
    "cs-check": "phpcs .",
    "cs-fix": "phpcbf .",
    "cs-commit-check": "git diff --name-only --diff-filter=AM origin/master | grep .php | xargs composer cs-check",
    "cs-commit-fix": "git diff --name-only --diff-filter=AM origin/master | grep .php | xargs composer cs-fix"
  },
  "autoload": {
    "psr-4": {
      "Xakki\\Emailer\\": "src"
    }
  }
}
